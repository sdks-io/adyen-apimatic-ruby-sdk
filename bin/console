#!/usr/bin/env ruby

# Load the lib folder into Ruby's load path
$LOAD_PATH.unshift(File.expand_path('../lib', __dir__))

# Require the gem
require 'adyen_ap_is'

puts 'AdyenApIs SDK loaded!'
puts 'You can now create a client with: client = AdyenApIs::Client.new'
puts 'Or use from_env: client = AdyenApIs::Client.from_env'

# Start an interactive IRB session
require 'irb'
IRB.start
